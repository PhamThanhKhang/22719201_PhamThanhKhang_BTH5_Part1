<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chỉnh sửa Sản Phẩm</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container mt-4">
    <h2>Chỉnh sửa Sản Phẩm</h2>
    <form action="/products/<%= product._id %>" method="POST">
      <div class="mb-3">
        <label class="form-label">Tên sản phẩm</label>
        <input type="text" name="name" value="<%= product.name %>" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Địa chỉ</label>
        <input type="text" name="address" value="<%= product.address %>" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Số điện thoại</label>
        <input type="text" name="phone" value="<%= product.phone %>" class="form-control" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Nhà cung cấp</label>
        <select name="supplierId" class="form-select" required>
          <% suppliers.forEach(supplier => { %>
            <option value="<%= supplier._id %>" <%= product.supplierId.toString() === supplier._id.toString() ? "selected" : "" %>>
              <%= supplier.name %>
            </option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Cập nhật</button>
      <a href="/products" class="btn btn-secondary">Hủy</a>
    </form>
  </div>
</body>
</html>
