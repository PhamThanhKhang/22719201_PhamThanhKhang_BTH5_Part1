<%- include("../partials/header") %>
<div class="container mt-4">
  <h2>Suppliers</h2>
  <a href="/suppliers/new" class="btn btn-primary">Add Supplier</a>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Name</th><th>Address</th><th>Phone</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(supplier => { %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.address %></td>
          <td><%= supplier.phone %></td>
          <td>
            <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
            <form action="/suppliers/<%= supplier._id %>/delete" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include("../partials/footer") %>
